pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                withMaven(maven : '3.8.1') {
                    bat "mvn clean compile"
                }
            }
        }

        stage('Test') {
            steps {
                withMaven(maven : '3.8.1') {
                    bat "mvn test"
                }
            }
        }

        stage('Deploy') {
            steps {
                withMaven(maven : '3.8.1') {
                    bat "mvn install"
                }
            }
        }
    }
}
