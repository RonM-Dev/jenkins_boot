pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                withMaven(maven : '3.8.1') {
                    bat "mvnw clean compile"
                }
            }
        }

        stage('Test') {
            steps {
                withMaven(maven : '3.8.1') {
                    bat "mvnw test"
                }
            }
        }

        stage('Deploy') {
            steps {
                withMaven(maven : '3.8.1') {
                    bat "mvnw deploy"
                }
            }
        }
    }
}
